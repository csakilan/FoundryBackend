{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Foundry v1 - Single stack for EC2/S3/RDS/DynamoDB",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "Networking"
          },
          "Parameters": [
            "SubnetId",
            "SecurityGroupId"
          ]
        }
      ],
      "ParameterLabels": {
        "DBSubnetGroupName": {
          "default": "DB Subnet Group"
        },
        "SecurityGroupId": {
          "default": "Instance Security Group"
        },
        "SubnetId": {
          "default": "Target Subnet"
        }
      }
    }
  },
  "Outputs": {
    "EC2ec2instance1Id": {
      "Value": {
        "Ref": "EC2ec2instance1"
      }
    },
    "EC2ec2instance1NameTag": {
      "Value": "web-server"
    },
    "EC2ec2instance1PrivateIp": {
      "Value": {
        "Fn::GetAtt": [
          "EC2ec2instance1",
          "PrivateIp"
        ]
      }
    },
    "EC2ec2instance1PublicIp": {
      "Value": {
        "Fn::GetAtt": [
          "EC2ec2instance1",
          "PublicIp"
        ]
      }
    },
    "S3s3bucket1Arn": {
      "Description": "ARN of the S3 bucket",
      "Value": {
        "Fn::GetAtt": [
          "S3s3bucket1",
          "Arn"
        ]
      }
    },
    "S3s3bucket1DomainName": {
      "Description": "Domain name of the S3 bucket",
      "Value": {
        "Fn::GetAtt": [
          "S3s3bucket1",
          "DomainName"
        ]
      }
    },
    "S3s3bucket1Name": {
      "Description": "Name of the S3 bucket",
      "Value": {
        "Ref": "S3s3bucket1"
      }
    }
  },
  "Parameters": {
    "SecurityGroupId": {
      "Description": "Security group",
      "Type": "AWS::EC2::SecurityGroup::Id"
    },
    "SubnetId": {
      "Description": "Target subnet",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "VpcId": {
      "Description": "(Reserved for future use)",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "EC2ec2instance1": {
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/xvda",
            "Ebs": {
              "DeleteOnTermination": true,
              "VolumeSize": 20,
              "VolumeType": "gp3"
            }
          }
        ],
        "IamInstanceProfile": {
          "Ref": "EC2ec2instance1RoleInstanceProfile"
        },
        "ImageId": "{{resolve:ssm:/aws/service/canonical/ubuntu/server/22.04/stable/current/amd64/hvm/ebs-gp2/ami-id}}",
        "InstanceType": "t3.micro",
        "SecurityGroupIds": [
          {
            "Ref": "SecurityGroupId"
          }
        ],
        "SubnetId": {
          "Ref": "SubnetId"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "web-server"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Sub": "#!/bin/bash\n# Auto-generated environment variables for service connections\nexport S3_BUCKET_NAME=\"<troposphere.Ref object at 0x10387fd50>\"\necho \"export S3_BUCKET_NAME=\\\"<troposphere.Ref object at 0x10387fd50>\\\"\" >> /etc/environment\n\n# User-provided UserData\n\n"
          }
        }
      },
      "Type": "AWS::EC2::Instance"
    },
    "EC2ec2instance1Role": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject",
                    "s3:ListBucket"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "S3s3bucket1",
                        "Arn"
                      ]
                    },
                    {
                      "Fn::Sub": [
                        "${BucketArn}/*",
                        {
                          "BucketArn": {
                            "Fn::GetAtt": [
                              "S3s3bucket1",
                              "Arn"
                            ]
                          }
                        }
                      ]
                    }
                  ]
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "S3AccessPolicy"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "EC2ec2instance1Role"
          },
          {
            "Key": "ManagedBy",
            "Value": "CloudFormation"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "EC2ec2instance1RoleInstanceProfile": {
      "Properties": {
        "Roles": [
          {
            "Ref": "EC2ec2instance1Role"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "S3s3bucket1": {
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        },
        "BucketName": "s35f8c9e6b-my-app-data",
        "OwnershipControls": {
          "Rules": [
            {
              "ObjectOwnership": "BucketOwnerEnforced"
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      },
      "Type": "AWS::S3::Bucket"
    }
  }
}